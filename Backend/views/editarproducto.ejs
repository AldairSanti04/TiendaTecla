<%- include("cabeceras/header") %>

<body>

    <h1 class="p-3 text-center">Modificar Producto</h1>

 
    <div class="container mt-4">

      <div class="card border-secondary">
        <div class="card-header"><span class="d-none" id="idProducto"><%= result.id %></span> <%= result.nombre_producto %> </div>
        <div class="card-body">
          
          <!-- referencia a ruta guardar creacion de usuario se hace un POST-->
          <form id="nuevoForm" method="POST">
            <div class="mb-3">
              <label for="producto_name" class="form-label">Nombre del Producto</label>
              <input required type="text" class="form-control" value="<%= result.nombre_producto %>" id="producto_name" name="producto_name" tabindex="1"/>
            </div>

            <div class="mb-3">
                <label for="producto_precio" class="form-label">Precio</label>
                <input required type="number" step="any" class="form-control" value="<%= result.precio_producto %>" id="producto_precio" name="producto_precio" tabindex="2"/>
            </div>

            <div class="mb-3">
                <label for="producto_imagen" class="form-label">URL Imagen</label>
                <input required type="text" class="form-control" value="<%= result.imagen_producto %>" id="producto_imagen" name="producto_imagen" tabindex="3"/>
            </div>

            <div class="mb-3">
              <label for="categoria" class="form-label">Categor√≠a</label>
              <select required class="form-select" id="categoria" name="categoria" tabindex="4">
                <option value="<%= result.categoria %>"><%= result.categoria %></option>
              </select>
            </div>

            <div class="mb-3">
                <label for="producto_cantidad" class="form-label">Cantidad</label>
                <input required type="number" min="1" class="form-control" value="<%= result.cantidad_inventario %>" id="producto_cantidad" name="producto_cantidad" tabindex="5"/>
            </div>

            <button type="submit" class="btn btn-primary" tabindex="6">
              Guardar
            </button>
            <a href="/listado" class="btn btn-secondary">Cancelar</a>
          </form>

        </div>
      </div>
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="../js/actualizar.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
      crossorigin="anonymous"
    ></script>
  </body>
</html>